<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.VKNG.Notes.View.DetalheNoteView">
    <ContentPage.Content>
        <RelativeLayout x:Name="RootLayout" >
            <StackLayout Orientation="Vertical"  Margin="25" Padding="0">
                <Label Text="titulo da nota" FontSize="20" VerticalTextAlignment="Center"></Label>
                <Editor Text="Descricao da nota" Keyboard="Text" ></Editor>
                <Button x:Name="buttonSalvar" Text="Salvar" Clicked="buttonSalvar_Clicked"  Margin="25" ></Button>
            </StackLayout>
            
                

        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>