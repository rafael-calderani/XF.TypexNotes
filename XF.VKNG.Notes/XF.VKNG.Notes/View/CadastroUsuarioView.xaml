<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.VKNG.Notes.View.CadastroUsuarioView"
             BackgroundColor="{StaticResource backgroundColor}"
             Title="Adicionar novo usuário">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="20">
            <Image x:Name="imgIcon" Aspect="AspectFit" HorizontalOptions="FillAndExpand" HeightRequest="120" Source="typexlogoandlabel.png"/>
            <Entry x:Name="txtEmail" Placeholder="E-mail" Keyboard="Email" />
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="txtConfirmPassword" Placeholder="Confirmar Password" IsPassword="True" />
            <Button x:Name="btnRegister" Text="Cadastrar" Clicked="btnRegister_Clicked" Margin="0,25,0,0" />
            <ActivityIndicator x:Name="indProgress" Color="DarkSlateBlue" IsRunning="false" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>