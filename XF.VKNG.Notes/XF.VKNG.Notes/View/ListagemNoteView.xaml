<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Suas Anotações"
             x:Name="pageNoteList"
             x:Class="XF.VKNG.Notes.View.ListagemNoteView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+ Nova Nota" Clicked="tbNewNote_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView x:Name="listagemNote" Margin="20" SelectedItem="{Binding Note}" ItemTapped="listagemNote_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell  Text="{Binding Titulo}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>