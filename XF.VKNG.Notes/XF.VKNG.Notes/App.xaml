<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.VKNG.Notes.App">
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="defaultButtonColor">#1E90FF</Color>
            <Color x:Key="defaultButtonTextColor">#FFF</Color>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource defaultButtonColor}" />
                <Setter Property="TextColor" Value="{StaticResource defaultButtonTextColor}" />
                <Setter Property="Margin" Value="0, 40, 0, 0" />
            </Style>
            <Style x:Key="buttonSimple" TargetType="Button">
                <Setter Property="TextColor" Value="#1E90FF" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="Margin" Value="0, 10, 0, 0" />
            </Style>
            <Style TargetType="StackLayout">
                <Setter Property="Margin" Value="20" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="Margin" Value="0, 0, 20, 0" />
            </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>